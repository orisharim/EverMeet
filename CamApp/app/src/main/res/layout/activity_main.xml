<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <!-- Remote view (full screen) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local view (picture-in-picture) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:elevation="10dp" />

    <!-- Login Layout -->
    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebRTC Video Call"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Target User Layout (to make a call) -->
    <LinearLayout
        android:id="@+id/targetUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#80000000"
        android:layout_gravity="top">

        <EditText
            android:id="@+id/targetUserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Who do you want to call?"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/callButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Call"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Incoming Call Layout -->
    <LinearLayout
        android:id="@+id/incomingCallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/incomingCallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Someone is calling you"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/acceptButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_check_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#4CAF50"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/rejectButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_close_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#F44336"
            android:padding="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Call Control Layout -->
    <LinearLayout
        android:id="@+id/callControlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/micButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_mic_off_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#424242"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/videoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_mic_off_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#424242"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/endCallButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_call_end_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#F44336"
            android:padding="16dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/switchCameraButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_cameraswitch_24"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#424242"
            android:padding="12dp"
            android:layout_margin="8dp" />
    </LinearLayout>
</FrameLayout>